<div class="wrapper text-light position-relative h-100">
  <div class="d-flex p-4 w-100 align-items-center gap-2 bg-gray">
    <%= image_tag "userSeed.jpg", alt: "avatar image", class: "avatar-img rounded-circle"%>
    <div class="d-flex flex-column">
      <p class="m-0 fs-greet">Welcome</p>
      <p class="m-0">Hay, Douglas ðŸ‘‹</p>
    </div>
  </div>
  <%# ----------- Coupons --------- %>
  <div class="mt-3 mx-3">
    <h3 class="mb-3">Coupons & Packs</h3>
    <div class="position-relative">
      <div class="back-card rounded-5 d-flex align-items-center justify-content-center">
        <h4 class="fs-1">15% OFF</h4>
      </div>
      <div class="position-absolute w-100 h-100 start-0 top-0 rounded-5 coupon-img d-flex align-items-center justify-content-center">
        <h4 class="fs-1">15% OFF</h4>
      </div>
    </div>
  </div>
  <%# ----------- Appointments --------- %>
  <div class="my-5 mx-3 ">
    <h2 class="">Your appointments</h2>
    <% @appointments.each do |appointment|  %>
      <div class="appointment-card rounded-5  d-flex position-relative">
        <% if appointment.goal_image.attached? %>
          <%= image_tag appointment.goal_image, class: "h-100 rounded-5" %>
        <% else %>
          <div class="bg-danger avatar-w d-flex align-items-center justify-content-center rounded-5 bg-dark">
            <%= image_tag "user.png", alt: "no avatar image", class: "h-50"%>
          </div>
        <% end %>
        <div class="d-flex flex-column align-items-center mx-auto">
          <div class="d-flex flex-column align-items-center mt-2">
            <h6>Date & Time</h6>
            <p class="mb-1"><%= appointment.date.strftime("%Y/%m/%d (%a)") %></p>
            <p class="mb-2"><%= appointment.start_time.strftime("%H:%M")%>~<%=appointment.finish_time.strftime("%H:%M") %></p>
          </div>
          <div class="d-flex flex-column align-items-center mx-auto">
            <h6>Services</h6>
            <% appointment.professional.services.each do |service| %>
              <p class="m-0"><%= service.name %></p>
            <% end %>
          </div>
        </div>
        <%= link_to appointment_path(appointment),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "text-decoration-none appointment-cancel rounded-circle bg-danger position-absolute d-flex align-items-center justify-content-center" do%>
          <i class="fa-solid fa-xmark"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "Let's Cut!" , new_appointment_path, class: "mx-2 py-3 bg-warning rounded-5 text-center fs-3 position-fixed appointment-btn" %>
</div>
