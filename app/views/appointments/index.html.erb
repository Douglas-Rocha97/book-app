 <div class="text-light position-relative min-vh-100">
  <div class="bg-gray p-4 w-100 d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-2">
    <% if current_user.photo.attached?  %>
      <%= image_tag current_user.photo, alt: "avatar image", class: "avatar-img rounded-circle" %>
    <% else %>
       <%= image_tag "user.png", alt: "avatar image", class: "avatar-img rounded-circle" %>
    <% end %>
      <div class="d-flex flex-column">
        <p class="m-0 fs-greet">Welcome</p>
        <p class="m-0">Hey, <%= current_user.name %> ðŸ‘‹</p>
      </div>
    </div>
    <%= button_to destroy_user_session_path, method: :delete, class: "btn d-flex text-white align-items-center gap-1" do %>
      <i class="fa-solid fa-arrow-right-from-bracket"></i>
    <% end %>
  </div>
  <%# ----------- Coupons --------- %>
  <div class="mt-3 mx-3">
    <h3 class="mb-3 fs-4">Coupons & Packs</h3>
    <div class="position-relative">
      <div class="back-card rounded-5 d-flex align-items-center justify-content-center">
        <h4 class="fs-1">15% OFF</h4>
      </div>
      <div class="position-absolute w-100 h-100 start-0 top-0 rounded-5 coupon-img d-flex align-items-center justify-content-center">
        <h4 class="fs-1">15% OFF</h4>
      </div>
    </div>
  </div>
  <%# ----------- Appointments --------- %>
  <div class="my-5 mx-3 ">
    <h2 class="fs-4">Your appointments</h2>
    <div id="appointments" class="d-flex flex-align-center flex-column gap-3">
      <%= render @appointments %>
    </div>
  </div>
</div>
  <%= link_to "Let's Cut!" , new_appointment_path, class: "py-3 bg-warning rounded-5 text-center fs-3 appointment-btn d-block" %>
